        <item name="colorPrimary">#FFC554</item>
        <item name="colorPrimaryVariant">#E4A82A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
