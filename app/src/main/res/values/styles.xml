<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputStyle">
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"</style>

    <style name="search_product_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="search_result">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#30333B</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

    </style>

    <style name="filterStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="checkboxstyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="order_details">
        <item name="color">@color/dark_grey</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="order_details_hardcoded">
        <item name="color">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="login">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#30333B</item>
    </style>

</resources>