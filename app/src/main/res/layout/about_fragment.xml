<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".main_flow.ui.user.about.AboutFragment">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="This app is, as the name suggests, is dedicated to our instructor sir, Saurabh Tiwari.\n\nDear sir, Thank you for giving us this project.\n\nWe learned a lot through it."
                android:layout_margin="8dp"
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Our Team"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/purple_500"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/about_text"
                android:id="@+id/our_team_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/our_team_text"
                android:id="@+id/team_members_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>